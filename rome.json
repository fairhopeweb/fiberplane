{
    "$schema": "node_modules/rome/configuration_schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 2
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "nursery": {
                "useExhaustiveDependencies": "error",
                "useHookAtTopLevel": "error"
            }
        }
    },
    "files": {
        "ignore": [
            ".vscode/**",
            "dist/**",
            "fiberplane-provider-protocol/ts-runtime/**",
            "node_modules/**",
            "target/**",
            "**/providerTypes.ts",
            "**/*.json"
        ]
    }
}
